<%- include('../layouts/profileHeader') %>


<section class="content-main">
    <div class="row">
        <div class="col-6">
            <div class="content-header">
                <h2 class="content-title">welcome <%=user.name%></h2>
                <div>
                    <a href="/editprofile" class="btn btn-md rounded font-sm hover-up">Edit Profile</a>
                </div>
                
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <h6>Name</h6>
                        </div>
                        <div class="col-md-9">
                            <div class="mb-4">
                              
                                <input type="text" placeholder="Type here" value="<%= user.name%>" class="form-control">
                            </div>
                           
                            
                        </div>
                    </div> 
                    <hr class="mb-4 mt-0">
                    <div class="row">
                        <div class="col-md-3">
                            <h6>2. Mobile</h6>
                        </div>
                        <div class="col-md-9">
                            <div class="mb-4">
                               
                                <input type="text" placeholder="" value="<%=user.mobile%>" class="form-control">
                            </div>
                        </div> 
                    </div> 
                    <hr class="mb-4 mt-0">
                    <div class="row">
                        <div class="col-md-3">
                            <h6>Email </h6>
                        </div>
                        <div class="col-md-9">
                            <div class="mb-4">
                                <label class="mb-2 form-check form-check-inline" >
                                    <input type="text" placeholder="" value="<%=user.email%>" class="form-control">
                                    
                                </label>
                            </div>
                        </div> 
                    </div> 
                    <hr class="mb-4 mt-0">
                   
                </div>
            </div>
        </div>
    </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title" style="color: #717fe0;">Referral Code</h5>
            <p><strong>Referral code:</strong> <span id="referral"
                    style="color: green;">http://localhost:7000/refferal?refferalId=<%=user._id%> 
                    </span>
                <button id="copyButton" class="btn border ms-3"
                    style="color: white; background:#717fe0">Copy</button>
            </p>
        </div>
    </div>
</section> 


<br>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
crossorigin="anonymous"></script>
<script>
    document.getElementById('copyButton').addEventListener('click', function () {
        const referralUrl = document.getElementById('referral').innerText;
        navigator.clipboard.writeText(referralUrl).then(() => {
            Swal.fire({
                position: "top-end",
                icon: "success",
                title: "Url copied",
                showConfirmButton: false,
                timer: 1500
            });
            console.log("success");
        }).catch(err => {
            console.error('Error in copying text: ', err);
        });
    });
</script>

<%- include('../layouts/profileFooter') %>