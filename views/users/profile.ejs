<%- include('../layouts/profileHeader') %>


<section class="content-main">
    <div class="row">
        <div class="col-6">
            <div class="content-header">
                <h2 class="content-title">welcome <%=user.name%></h2>
                <div>
                    <a href="/editprofile" class="btn btn-md rounded font-sm hover-up">Edit Profile</a>
                </div>
                
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <h6>Name</h6>
                        </div>
                        <div class="col-md-9">
                            <div class="mb-4">
                              
                                <input type="text" placeholder="Type here" value="<%= user.name%>" class="form-control">
                            </div>
                           
                            
                        </div>
                    </div> 
                    <hr class="mb-4 mt-0">
                    <div class="row">
                        <div class="col-md-3">
                            <h6>2. Mobile</h6>
                        </div>
                        <div class="col-md-9">
                            <div class="mb-4">
                               
                                <input type="text" placeholder="" value="<%=user.mobile%>" class="form-control">
                            </div>
                        </div> 
                    </div> 
                    <hr class="mb-4 mt-0">
                    <div class="row">
                        <div class="col-md-3">
                            <h6>Email </h6>
                        </div>
                        <div class="col-md-9">
                            <div class="mb-4">
                                <label class="mb-2 form-check form-check-inline" >
                                    <input type="text" placeholder="" value="<%=user.email%>" class="form-control">
                                    
                                </label>
                            </div>
                        </div> 
                    </div> 
                    <hr class="mb-4 mt-0">
                   
                </div>
            </div>
        </div>
    </div>
    </div>
</section> 


<br>



<%- include('../layouts/profileFooter') %>