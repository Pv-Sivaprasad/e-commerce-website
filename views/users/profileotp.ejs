<script>
function moveToNext(input, event) {
    if (event.keyCode === 8 && input.previousElementSibling) {
        input.previousElementSibling.focus();
    } else if (event.keyCode !== 8 && input.nextElementSibling && input.value.length === 1) {
        input.nextElementSibling.focus();
    }
}
</script>

