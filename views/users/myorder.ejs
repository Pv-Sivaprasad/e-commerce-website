    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.addEventListener('click', function(event) {
                if (event.target.classList.contains('view-btn')) {
                    // Get the order ID from the data-id attribute of the clicked element
                    var orderId = event.target.getAttribute('data-id');
                    console.log("orderId", orderId);
                    // Redirect to the single order page with the order ID as a query parameter
                    window.location.href = '/singleorder?orderId=' + orderId;
                }
            });
        });
    </script>
