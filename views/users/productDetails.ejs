    <script>
        // Get the quantity input field and buttons
        var quantityInput = document.getElementById('quantity');
        var subtractButton = document.getElementById('subtractQuantity');
        var addButton = document.getElementById('addQuantity');
        var maxStock = "<%= product.quantity %>"; // Maximum stock value

    
        // Event listener for subtract button
        subtractButton.addEventListener('click', function() {
            var currentValue = parseInt(quantityInput.value);
            if (currentValue > 1) { // Ensure quantity doesn't go below 1
                quantityInput.value = currentValue - 1;
            }
        });
    
        // Event listener for add button
        addButton.addEventListener('click', function() {
            var currentValue = parseInt(quantityInput.value);
            if (currentValue < maxStock) { // Ensure quantity doesn't exceed max stock
                quantityInput.value = currentValue + 1;
            }
        });
    </script>
    
