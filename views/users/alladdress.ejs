<%- include('../layouts/profileHeader') %>

<div class="col-md-8 col-lg-9">
    <div class="tab-content">
        <!-- Show Addresses start -->

    </div><!-- Show Addresses end -->

    <!-- user details start -->
    <div class="container py-4">
        <h2 class="mb-4">Your Addresses</h2>
        <!-- List of existing addresses -->
        <div id="addressesList" class="row g-3">
            <!-- Example Address Entry -->
            <% address.forEach(item=>{%>

           
            <div class="col-12">
                <div class="p-3 border d-flex justify-content-between "
                    style="border-radius: 10px; background-color: #fff;">
                    <div class="">
                        <p><strong><%=item.name%></strong></p>
                        <p><%=item.streetAddress%> <br><%=item.city%>, <%=item.state%>, <%=item.pincode%><br></p>
                        <p>Phone: <%=item.mobile%></p>
                        <!-- Add edit and delete button if needed -->
                    </div>
                    <div class="">
                        <a href="/editaddress?id=<%=item._id %>" class="btn"
                            style="width: 100px;  background-color:darkviolet;">
                            <i class="fa fa-pencil" aria-hidden="true"></i> Edit <%=address._id %>
                        </a>
                        <a href="/deleteaddress?id=<%= item._id %>" class="btn"
                            style="width: 100px; background-color: #adb2ce;">
                            <i class="fa fa-trash" aria-hidden="true"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        <%})%> 
        </div>

        <!-- Button to trigger modal for adding new address -->
        <button type="button" class="btn btn-primary mt-3" data-bs-toggle="modal"
            data-bs-target="#addAddressModal">
            <a href="addaddress" style="text-decoration: none; color: white;">+ Add New
                Address</a>
        </button>
    </div>






    <!-- user details end -->

</div>
    
<div class="pagination-area mt-30 mb-50">
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-start">
            <li class="page-item active"><a class="page-link" href="#">01</a></li>
            <li class="page-item"><a class="page-link" href="#">02</a></li>
            <li class="page-item"><a class="page-link" href="#">03</a></li>
            <li class="page-item"><a class="page-link dot" href="#">...</a></li>
            <li class="page-item"><a class="page-link" href="#">16</a></li>
            <li class="page-item">
                <a class="page-link" href="#"><i class="material-icons md-chevron_right"></i></a>
            </li>
        </ul>
    </nav>
</div>



